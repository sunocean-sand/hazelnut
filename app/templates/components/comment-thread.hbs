<div class="row">
<div class="col-xs-8 col-xs-offset-2">

	<li>
		<div class="commenterImage">
			<img src={{user.imageThumbUrl}} height="80" width="80" class="img-circle">
		</div>
		<div class="commenterInfo">
			<p class="grey">{{user.displayName}}<small>{{ago timestamp LL}}</small></p>
		</div>
		<div class="commentText">
			<p>{{linkify message}}</p>
		</div>
	</li>

</div>
</div>