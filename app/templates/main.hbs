<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<div class="container-fluid no-gutter">


		<div class="row">
		<div class="text-center">

			<h1 class="white"><strong>BUILD A LASTING COMMUNITY</strong></h1>

			<p class="lead white">The fastest way to mobilize thousands, in real time</p>

		</div>
		</div>




		<div class="col-xs-12 col-md-4 col-md-offset-4">
			<div class="input-group input-group-lg center-block">
			{{input class="form-control" type="text" value=newListTitle action="createList" placeholder="Create a campaign/project/event"}}
			</div>
		</div>

		<div class="row">
			<div class="text-center">
				
				<br><br>
				<div class="pink-background">
				<p class="white">Discover</p></div>

				<br>

			</div>
		</div>

		<div class="row center-block">
		{{!div class="grid js-masonry"
  data-masonry-options='{ "itemSelector": ".grid-item", "columWidth": 250, "isFitWidth": true, "gutter": 20 }'}}
  		{{#masonry-grid}}

		{{#each model as |list|}}
			{{#link-to 'honeybee' list}}
			{{stack-list title=list.title displayName=list.user.displayName}}
			{{/link-to}}
		{{/each}}

		{{/masonry-grid}}

		</div>

	</div>
