<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<div class="container-fluid">

		<div class="row">
			<div class="col-xs-12 text-center">

				<h4>Discover stacks in the works</h4>

				<br><br>

			</div>
		</div>

		<div class="grid js-masonry"
  data-masonry-options='{ "itemSelector": ".grid-item", "columWidth": 200, "isFitWidth": true, "gutter: 20" }'>

		{{#each model as |list|}}
			{{#link-to 'honeybee' list}}
			{{stack-list title=list.title displayName=list.user.displayName}}
			{{/link-to}}
		{{/each}}

		</div>

	</div>
