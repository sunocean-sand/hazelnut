<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<div class="container-fluid">



{{!save or cancel}}
<div class="row">
	<span class="pull-left"><button>X</button></span>
	<span class="pull-right"><button {{action "createStack"}}>Save</button></span>
</div>



{{!stack name}}
<div class="row">
<div class="input-group input-group-lg center-block">
			
			{{input class="form-control" type="text" value=model.title placeholder="Create a campaign/project/event"}}

</div>
</div>

<br><br>

{{!create todo}}


<div class="col-xs-12 col-md-6 col-md-offset-3">

		{{input type="text" value=model.todos.title action="addTodo" placeholder="Enter a todo"}}
</div>




{{!task list}}

<div class="sortable-list">
		{{#each todosort as |t|}}
<div class="item" data-id="{{unbound t.id}}" idx="{{t.idx}}">
			{{pre-task todo=t user=controllers.application.model title=t.title store=store list=model tlist=model.todos}}
</div>
		{{/each}}
</div>




</div>