{{!stack detail page with task list}}
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<div class="container-fluid">

		<div class="row">
			<div class="pull-right">
			{{#link-to "manage" model.id}}
			<button class="btn-gray"> Manage People {{fa-icon "coffee"}}</button> 
			{{/link-to}}
			</div>
		</div>


		{{stack-detail session=session list=model title=model.title creator=model.user.displayName isEditing=model.isEditing store=store go='go'}}
		<div class="row">
        <div class="col-xs-offset-1 col-md-offset-2 col-xs-8 col-md-7">
			    {{input type="text" value=newTodoTitle action="createTodo" placeholder="Enter a todo"}}
        </div>
        <div class="col-xs-2 col-md-1 ">
				<button class="btn-addtodo btn-pink" {{action "createTodo"}}><div class="pushup">+</div></button>
		</div></div>

<div class="sortable-list">
		{{#each todosort as |t|}}
<div class="item col-md-6 col-xs-10 col-md-offset-3 col-xs-offset-1" data-id="{{unbound t.id}}" idx="{{t.idx}}">
			{{#link-to 'lavender' model.id t.id}}
				{{task-list todo=t user=controllers.application.model title=t.title store=store list=model tlist=model.todos}}
			{{/link-to}}
</div>
		{{/each}}
</div>

	</div>

